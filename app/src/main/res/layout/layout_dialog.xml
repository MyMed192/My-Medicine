<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="0dp"
        android:textColor="#000"
        android:text="Add a medicine"
        android:textSize="20sp" />

    <EditText
        android:layout_marginTop="40dp"
        android:id="@+id/edit_medicineName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Medicine name" />

    <EditText
        android:id="@+id/edit_medicineLifeTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_medicineName"
        android:layout_alignParentStart="true"

        android:hint="Lifetime" />

    <EditText
        android:id="@+id/edit_medicineQuantity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_medicineLifeTime"
        android:layout_alignParentStart="true"
        android:hint="Quantity"
        android:inputType="date" />

    <EditText
        android:id="@+id/edit_medicineComments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_medicineQuantity"
        android:layout_alignParentStart="true"
        android:hint="Comments"
        android:inputType="text" />

    <Button
        android:id="@+id/buttonCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_medicineComments"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:text="Cancel" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/buttonCancel"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="Save" />

</RelativeLayout>